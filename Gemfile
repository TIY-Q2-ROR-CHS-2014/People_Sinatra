source 'https://rubygems.org'
gem 'sinatra'

# If you do not have mysql on your system, this will fail!
# This is our database adapter
gem 'mysql'
# This will make it so I don't have to restart my server all of the time
gem 'shotgun'
# This is a console gem. IRB on CRACK
# It will use the config.ru and include all of the dependencies I put in there
gem 'tux'
# This will connect our application to our database
gem 'data_mapper'
# This is our adapter for our data_mapper
gem 'dm-mysql-adapter'
